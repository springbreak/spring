<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
	<property name="driverClass" value="com.mysql.jdbc.Driver"></property>
	<property name="url" value="jdbc:mysql://localhost/springtest"></property>
	<property name="username" value="springdev"></property>
	<property name="password" value="test"></property>
</bean>
<bean id="userDao" class="org.gradle.UserDaoJdbc">
</bean>

<bean id="jdbcContext" class="org.gradle.JdbcContext">
</bean>

<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
	<property name="dataSource" ref="dataSource"></property>
</bean>
</beans>


